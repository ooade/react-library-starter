{
	"name": "react-library-starter",
	"version": "0.1.0",
	"description": "A simple boilerplate to help get started in creating production ready react libraries",
	"main": "dist/custom-button.js",
	"module": "dist/custom-button.es.js",
	"umd": "dist/custom-button.umd.js",
	"scripts": {
		"test": "jest",
		"lint": "eslint src/*",
		"coverage": "jest --coverage",
		"build": "npm-run-all rollup minify:*",
		"rollup": "rollup -c rollup.config.js",
		"minify:cjs": "uglifyjs $npm_package_main -cm -o $npm_package_main --source-map",
		"minify:umd": "uglifyjs $npm_package_umd -cm toplevel -o $npm_package_umd --source-map"
	},
	"files": [
		"dist",
		"README.md"
	],
	"author": "Ademola Adegbuyi <ooade96@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@babel/preset-env": "^7.3.1",
		"@babel/preset-react": "^7.0.0",
		"babel-cli": "^6.26.0",
		"babel-plugin-transform-react-remove-prop-types": "^0.4.24",
		"enzyme": "^3.8.0",
		"enzyme-adapter-react-16": "^1.8.0",
		"eslint": "^5.13.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-jsx-a11y": "^6.2.0",
		"eslint-plugin-react": "^7.12.4",
		"jest": "^24.0.0",
		"jest-enzyme": "^7.0.1",
		"npm-run-all": "^4.1.5",
		"prop-types": "^15.6.2",
		"react": "^16.7.0",
		"react-dom": "^16.7.0",
		"rollup": "^1.1.2",
		"rollup-plugin-babel": "^4.3.2",
		"uglifyjs": "^2.4.11"
	},
	"peerDependencies": {
		"react": "^16.7.0",
		"react-dom": "^16.7.0"
	},
	"jest": {
		"setupFilesAfterEnv": [
			"./node_modules/jest-enzyme/lib/index.js"
		]
	}
}
